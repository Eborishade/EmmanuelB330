<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/wordDict">


    <fragment
        android:id="@+id/wordDict"
        android:name="com.example.worddictionary.activities.words.WordDict"
        android:label="WordDict"
        tools:layout="@layout/fragment_word_dict" >
        <action
            android:id="@+id/action_wordDict_to_search"
            app:destination="@id/search" />
    </fragment>
    <fragment
        android:id="@+id/search"
        android:name="com.example.worddictionary.activities.search.Search"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search_to_addWord"
            app:destination="@id/addWord" />
    </fragment>
    <fragment
        android:id="@+id/addWord"
        android:name="com.example.worddictionary.activities.addword.AddWord"
        android:label="AddWord"
        tools:layout="@layout/fragment_add_word" >
        <action
            android:id="@+id/action_addWord_to_search"
            app:destination="@id/search"
            app:popUpTo="@id/wordDict"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>
