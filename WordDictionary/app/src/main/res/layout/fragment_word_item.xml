<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="word"
            type="com.example.worddictionary.database.Word" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/word_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{word.wordId}"
                app:layout_constraintBottom_toTopOf="@+id/word_shortdef1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,NestedWeights" />

            <TextView
                android:id="@+id/word_shortdef1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{word.shortDef1}"
                app:layout_constraintBottom_toTopOf="@+id/word_shortdef2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/word_id"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/word_shortdef2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{word.shortDef2}"
                app:layout_constraintBottom_toTopOf="@+id/word_shortdef3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/word_shortdef1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/word_shortdef3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{word.shortDef3}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/word_shortdef2"
                tools:ignore="HardcodedText" />


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/word_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5D605F"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/stat_notify_error"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</layout>
